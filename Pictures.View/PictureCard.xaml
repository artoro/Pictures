<UserControl x:Class="Pictures.View.PictureCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pictures.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="PictureBorder" CornerRadius="10" Background="Black"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                <RotateTransform x:Name="RotateTransform" Angle="0"/>
                <TranslateTransform x:Name="TranslateTransform" X="0" Y="0"/>
            </TransformGroup>
        </Border.RenderTransform>
        <Image x:Name="Test" Style="{StaticResource PictureCardStyle}" 
               Source="https://altimadental.pl/wp-content/uploads/2015/01/default-placeholder.png" Opacity="1"/>
    </Border>
</UserControl>
